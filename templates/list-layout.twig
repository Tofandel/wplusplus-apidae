{% extends list-base.twig %}
{% import list-base.twig as apidae %}

{% block single %}
	<div class="apidae-cell">
		<div class="image-container">
			<a href="{{ link }}" class="image-container-inner">
				<div class="img" style="background-image: url({{ apidae.image_url(o, 'medium', 0) }})"></div>
			</a>
		</div>
		<section class="info">
			<h3 class="title">{{ o.nom.libelleFr }}</h3>
			<h4 class="commune">{{ o.localisation.adresse.commune.nom }}</h4>
			<p class="description">{{ o.presentation.descriptifCourt.libelleFr }}</p>
			<div class="link"><a href="{{ link }}">{{ 'Read more'|t }}</a></div>
		</section>
	</div>
{% endblock %}
{% block layout %}
	{{ block(search_form) }}
	{# block(query_args) #}
	{# block(search_input) #}
	{# endblock search_form #}
	{% if numResult > 0 %}
		{{ block(pagination) }}
		{{ block(loop) }}
		{# block(marker) #}
		{# block(single) #}
		{# endblock loop #}
		{{ block(footer) }}
		{# block('pagination') #}
		{# endblock footer #}
	{% else %}
		{% block(no_result) %}
	{% endif %}
{% endblock %}